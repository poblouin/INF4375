extends layout

block content
    h2= title
    #pros
        fieldset
            legend Professionnel
            label sexe
            input#sexe(type='text', value='')
            #sexe_invalide
            br
            label nom
            input#nom(type='text', value='')
            #nom_invalide
            br
            label prénom
            input#prenom(type='text', value='')
            #prenom_invalide
            br
            label spécialité
            input#specialite(type='text', value='')
            #specialite_invalide
            br
            label nombre de patients
            input#nombre_patients(type='text', disabled, value='0')
            br
            label total des visites
            input#total_visites(type='text', disabled, value='0')
            br
            br
            strong liste des patients rencontrés en 2014 :
                table
                    thead
                        th nom patient
                        th prénom patient
                        th id
                    tbody
            br
    div
        #buttons
            button(onclick='ajouter_pros()') Ajouter ce professionnel

    block scripts
        script(src='/javascripts/ajouter.js')
